#include "libft.h"

static int	ft_counting(int n)
{
	int	i;

	i = 0;
	if (n > 9)
		i = ft_counting(n / 10);
	i++;
	return (i);
}

static void	ft_writing(char *p, int n, int *i)
{
	if (n <= 9)
	{
		p[*i] = '0' + n;
		(*i)++;
	}
	else
	{
		ft_writing(p, n / 10, i);
		ft_writing(p, n % 10, i);
	}
}

char	*ft_itoa(int n)
{
	char	*p;
	int		count;
	int		index;
	int		s;

	s = 1;
	if (n < 0)
	{
		n = n * -1;
		s = -1;
	}
	count = ft_counting(n);
	if (s == -1)
		count += 1;
	index = 0;
	p = (char *) malloc((count + 1) * sizeof(char));
	if (s == -1)
	{
		index = 1;
		p[0] = '-';
		ft_writing(p, n, &index);
	}
	else
	ft_writing(p, n, &index);
	p[index] = '\0';
	return (p);
}